<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CFCECE"
    tools:context=".fragment.FragmentAkun">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/kotakheader">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:text="Akun"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:paddingHorizontal="20dp">


        <RelativeLayout
            android:id="@+id/atas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@color/white"
            android:paddingTop="70dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/montserrat_alternates_semibold"
                android:text="Adit Rizki"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TVemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nama"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:fontFamily="@font/montserrat_alternates"
                android:text="Email            : "
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nama"
                android:layout_marginVertical="10dp"
                android:layout_toRightOf="@+id/TVemail"
                android:fontFamily="@font/montserrat_alternates"
                android:text="rizkiadit23@gmail.com"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/TVtelepon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TVemail"
                android:layout_margin="10dp"
                android:fontFamily="@font/montserrat_alternates"
                android:text="No Telepon  :"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/telepon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_marginVertical="10dp"
                android:layout_toRightOf="@+id/TVtelepon"
                android:fontFamily="@font/montserrat_alternates"
                android:text="+62 896 4455 6072"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/TValamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TVtelepon"
                android:layout_margin="10dp"
                android:fontFamily="@font/montserrat_alternates"
                android:text="Alamat.        :"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/telepon"
                android:layout_marginVertical="10dp"
                android:layout_toRightOf="@+id/TValamat"
                android:fontFamily="@font/montserrat_alternates"
                android:text="Karawang"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/atas"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:text="Profile"
            android:onClick="profile"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:cornerRadius="10dip" />

        <Button
            android:id="@+id/ubahpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:text="Change Password"
            android:onClick="ubahpwd"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:backgroundTint="@color/white"
            app:cornerRadius="10dip"/>

        <Button
            android:id="@+id/toko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ubahpwd"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:text="Toko"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:cornerRadius="10dip" />

        <Button
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toko"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:text="About"
            android:onClick="about"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:cornerRadius="10dip" />

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/about"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:text="Log Out"
            android:onClick="logout"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:backgroundTint="@color/Orange"
            app:cornerRadius="10dip"/>

    </RelativeLayout>

</FrameLayout>